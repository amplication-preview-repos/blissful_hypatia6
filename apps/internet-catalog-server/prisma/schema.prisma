datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id            String         @id @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  name          String?
  photo         Json?
  description   String?
  purchaseLinks String?
  category      Category?      @relation(fields: [categoryId], references: [id])
  categoryId    String?
  favorites     Favorite[]
  discountCodes DiscountCode[]
}

model DiscountCode {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  discountCode String?
  user         User?    @relation(fields: [userId], references: [id])
  userId       String?
  product      Product? @relation(fields: [productId], references: [id])
  productId    String?
}

model Favorite {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

model Category {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  products  Product[]
}

model User {
  id            String         @id @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  firstName     String?
  lastName      String?
  username      String         @unique
  email         String?        @unique
  password      String
  roles         Json
  favorites     Favorite[]
  discountCodes DiscountCode[]
}
